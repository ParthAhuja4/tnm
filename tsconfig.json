{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": [
    "src/lib/analytics-utils.ts",
    "src/lib/auth-utils.tsx",
    "src/lib/chart-utils.ts",
    "src/lib/date-utils.ts",
    "src/lib/file-utils.tsx",
    "src/lib/form-utils.tsx",
    "src/lib/i18n.tsx",
    "src/lib/notification-utils.ts",
    "src/lib/storage-utils.ts",
    "src/lib/theme-utils.tsx",
    "src/lib/validation-schemas.ts",
    "src/lib/viz-utils.tsx",
    "src/lib/README.md",
    "src/lib/ui-utils.ts"
  ]
}

